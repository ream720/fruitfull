---
import { Image } from 'astro:assets';
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
  description?: string;
  showBackLink?: boolean;
  backLinkText?: string;
  backLinkHref?: string;
}

const {
  title,
  description = "Fruitfull Seeds - Premium Genetics",
  showBackLink = false,
  backLinkText = "Back",
  backLinkHref = "/"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/fruitfull/logo/1.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titan+One&display=swap" rel="stylesheet">
  </head>
  <body class="bg-ff-bg-primary text-ff-text-primary min-h-screen">
    <div class="container mx-auto px-4 max-w-4xl">
      <header class="py-3">
        <nav class="flex items-center justify-between">
          <div class="flex items-center space-x-6">
            <a href="/" class="block transition-transform hover:scale-105">
              <Image src="/images/fruitfull/logo/1.png" alt="Fruitfull Seeds" width={64} height={64} class="h-16 w-16 aspect-square object-contain" />
            </a>
            <div class="flex space-x-4">
              <a href="/genetics" class="text-ff-text-secondary hover:text-ff-text-primary transition-colors">
                Genetics Library
              </a>
              <a href="/about" class="text-ff-text-secondary hover:text-ff-text-primary transition-colors">
                About
              </a>
            </div>
          </div>
        </nav>
        {showBackLink && (
          <div class="mt-8 mb-2">
            <a
              href={backLinkHref}
              class="inline-flex items-center gap-2 text-ff-text-secondary hover:text-ff-grape-vivid transition-colors duration-300 group"
            >
              <svg class="w-4 h-4 transition-transform duration-300 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              <span class="text-sm font-medium tracking-wide">{backLinkText}</span>
            </a>
          </div>
        )}
      </header>

      <main class="pb-12">
        <slot />
      </main>
    </div>
    <Analytics />
    <SpeedInsights />
  </body>
</html>